[Unit]
Description=Gunicorn for Rohan Site
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/rohan_site
EnvironmentFile=/etc/rohan-site.env
ExecStart=/opt/rohan_site/venv/bin/gunicorn -w 3 -b 127.0.0.1:8000 app:app
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
